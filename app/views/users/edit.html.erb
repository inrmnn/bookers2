<p id="notice"></p>
<div class="container">
    <%= render 'books/errors', model: @user %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
            <label for="user_name" class="form-label">Name</label>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
             <label for="user_intrduction" class="form-label">Image</label>
            <%= f.file_field :profile_image, placeholder: "image", accept: "image/*" %>  
        </div>
        <div class="form-group">
            <label for="user_intrduction" class="form-label">Introduction</label>
            <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>