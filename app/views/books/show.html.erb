<p id="notice"></p>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <h2>User info</h2>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <table class="table">
                <tbody>
                    <tr></tr>
                    <tr>
                        <th>name</th>
                        <th><%= @book.user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @book.user.profile %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <a class="btn btn-outline-secondary btn-block" href="#">
                    <i class="fas fa-user-cog"></i>
                </a>
            </div>
             
             <h2 class="mt-3">New book</h2>
             
              <%= render 'books/book', book: @newbook %>

        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                  <tr>
                    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
                    <td class="book-title"><%= @book.title %></td>
                    <td class="book-body"><%= @book.body %></td>
                    <td><%= link_to "Edit", edit_book_path, class:"btn btn-success" %></td>
                     <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
                  </tr>
            </table>
        </div>
    </div>
</div>